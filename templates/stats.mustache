<div class="container">
    <div class="hero-section text-center p-5">
        <h1>{{ heroheading }}</h1>
        <p class="lead">{{ herosubtext }}</p>
    </div>
    <div class="row text-center">
        {{#stats}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">{{ value }}</h3>
                    <p class="card-text">{{ label }}</p>
                </div>
            </div>
        </div>
        {{/stats}}
    </div>
</div>